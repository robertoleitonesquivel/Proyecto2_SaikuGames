<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Proyecto2_SaikuGames</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Proyecto2_SaikuGames.styles.css" asp-append-version="true" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
			<div class="container">
				<a class="navbar-brand" href="#">Saikou Games</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav ml-auto">
						<li class="nav-item">
							<a class="nav-link" href="/Home/Index">Inicio</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="/Juegos/Index">Juegos</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="/Contact/Index">Contacto</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	</header>

	<main role="main" class="container pb-3">
		@RenderBody()
	</main>

	<footer class="bg-dark text-white text-center p-4 mt-5">
		<div class="container">
			<div class="row">

				<div class="col-md-4">
					<h5>Información de la Empresa</h5>
					<p>Dirección: 123 Calle Principal, Ciudad, País</p>
					<p>Teléfono: +123 456 789</p>
					<p>Email: info@saikougames.com</p>
				</div>

				<div class="col-md-4">
					<h5>Enlaces Rápidos</h5>
					<ul class="list-unstyled">
						<li><a href="#">Inicio</a></li>
						<li><a href="#">Juegos</a></li>
						<li><a href="#">Contacto</a></li>
					</ul>
				</div>

				<div class="col-md-4">
					<h5>Redes Sociales</h5>
					<div class="d-flex justify-content-center">
						<a href="#" class="text-white m-1"><img src="~/icon/facebook.png" /></a>
						<a href="#" class="text-white m-1"><img src="~/icon/instagram.png" /></a>
						<a href="#" class="text-white m-1"><img src="~/icon/linkedin.png" /></a>
						<a href="#" class="text-white m-1"><img src="~/icon/twitter.png" /></a>
					</div>				
				</div>
			</div>
		
			<div class="mt-3">
				<p>&copy; 2023 Saikou Games. Todos los derechos reservados.</p>
			</div>
		</div>
	</footer>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
